{% extends "layout.njk" %}

{% block content %}

<div class="card">
    
    <section class="avatar" style="background: url({{teacher.profile_url}}) no-repeat center center / cover"></section>
    
    <section class="details">
        
        <h3>Details</h3>

        <div class="item">
            <div>Name</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{teacher.age}} years</div>
        </div>

        <div class="item">
            <div>Degree</div>
            <div>{{teacher.degree}}</div>
        </div>

         <div class="item">
            <div>Specialization</div>
            <div>{{teacher.specialization}}</div>
        </div>

        <div class="item">
            <div>Class Type</div>
            {%for type in teacher.class_type%}
                <span>{{type}}</span>
            {%endfor%}
        </div>

        <div class="item">
            <div>Subjects</div>
            <div>
                {%for subject in teacher.subjects%}
                    <span>{{subject}}</span>
                {%endfor%}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{teacher.created_at}}</div>
        </div>

        <a href="/teachers/{{teacher.id}}/edit">Edit</a>

    </section>

</div>

{% endblock content %}