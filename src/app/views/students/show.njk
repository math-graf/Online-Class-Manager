{% extends "layout.njk" %}

{% block content %}

<div class="card">
    
    <section class="avatar" style="background: url({{student.profile_url}}) no-repeat center center / cover"></section>
    
    <section class="details">
        
        <h3>Details</h3>

        <div class="item">
            <div>Name</div>
            <div>{{student.name}}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{student.email}}</div>
        </div>

        <div class="item">
            <div>Birthday</div>
            <div>{{student.birth}}</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{student.age}} years</div>
        </div>

        <div class="item">
            <div>Grade</div>
            <div>{{student.grade}}</div>
        </div>

        <div class="item">
            <div>Teacher's name</div>
            <div>{{student.teacher_name}}</div>
        </div>

        <div class="item">
            <div>Weekly Schedule</div>
            <div>{{student.time}} hours</div>
        </div>

        <a href="/students/{{student.id}}/edit">Edit</a>

    </section>

</div>

{% endblock content %}