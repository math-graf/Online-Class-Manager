{% extends "layout.njk" %}

{% block content %}

<div class="card table-card">
    
    <div class="header">
        <a class="button" href="/students/create">New</a>
        <form action="/students" method="get">
            <input type="text" name="filter" placeholder="Filter by name" value="{{filter}}">
            <button type="submit">Filter</button>
        </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Student</th>
                <th>E-mail</th>
                <th>Grade</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td><span style="background-image: url({{student.profile_url}})"></span>{{student.name}}</td>
                <td>{{student.email}}</td>
                <td>{{student.grade}}</td>
                <td><a href="/students/{{student.id}}">Check</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div 
        class="pagination"
        data-total="{{pagination.total}}"
        data-page="{{pagination.page}}"
        data-filter="{{filter}}">
    </div>

</div>

{% endblock content %}