{% extends "layout.njk" %}

{% block content %}

<div class="card table-card">
    
    <div class="header">
        <a class="button" href="/teachers/create">New</a>
        <form action="/teachers" method="get">
            <input type="text" name="filter" placeholder="Name or subject" value="{{filter}}">
            <button type="submit">Filter</button>
        </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Subjects</th>
                <th>Students</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td><span style="background-image: url({{teacher.profile_url}})"></span>{{teacher.name}}</td>
                <td class="subject">
                    {% for subject in teacher.subjects %}
                        <span>{{ subject }}</span>
                    {% endfor %}
                </td>
                <td>{{teacher.total_students}}</td>
                <td><a href="/teachers/{{teacher.id}}">Check</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div 
        class="pagination"
        data-total="{{pagination.total}}"
        data-page="{{pagination.page}}"
        data-filter="{{filter}}">
    </div>

</div>

{% endblock content %}